package com.job_portal.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.job_portal.models.Industry;

public interface IndustryRepository extends JpaRepository<Industry, Integer> {

	// Tìm kiếm theo từng chữ cái nhập vào
	@Query("SELECT i FROM Industry i WHERE i.industryName LIKE %:query%")
	List<Industry> searchIndustry(@Param("query") String query);

	// Tìm theo tên được chọn từ Combobox
	Industry findByIndustryName(String industryName);
	
	@Query(value = """
            SELECT 
                i.industry_id AS industryId, 
                i.industry_name AS industryName, 
                COUNT(j.company_id) AS jobCount
            FROM 
                industry i
            LEFT JOIN (
                SELECT 
                    jp.company_id, 
                    jp.industry.industry_id 
                FROM 
                    job_posts jp
                INNER JOIN 
                    company c 
                ON 
                    jp.company_id = c.user_id
                WHERE 
                    jp.expire_date > CURRENT_DATE
            ) AS j 
            ON 
                j.industry_id = i.industry_id
            GROUP BY 
                i.industry_id, 
                i.industry_name
            """, nativeQuery = true)
    List<Object[]> countJobPostsByIndustry();

}
